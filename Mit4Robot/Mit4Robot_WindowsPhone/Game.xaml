        <Button Content="Delete file" HorizontalAlignment="Left" Height="36" Margin="266,0,0,0" VerticalAlignment="Top" Width="123"/>
        <Button Content="Validate code!" HorizontalAlignment="Left" Margin="10,304,0,0" VerticalAlignment="Top" Width="184"/>
        <Button Content="Reset!" HorizontalAlignment="Left" Margin="206,304,0,0" VerticalAlignment="Top" Width="184"/>
        <TextBox Name="tbCode" HorizontalAlignment="Left" Margin="10,357,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="273" Width="380"/>

    </Grid>
</Page>
